<!DOCTYPE html>
<html lang="en">

<%- include('./partial/head.ejs')%>

	<body>
		<%- include('./partial/header.ejs')%>
			<main>
				<div class="container">
					<div class="row">
						<div class="col-1"></div>
						<div class="col-10">
							<%- include('./partial/registrationHeader.ejs') %>
						</div>
					</div>
					<div class="row mt-5">
						<div class="col-1"></div>
						<div class="col-10">
							<% if (posts.length) { %>
								<% posts.forEach(({ title, author, text, image, id, createdAt })=> { %>
									<div class="post border border-success-subtle mt-2">
										<a href="/blog/<%=id%>" class="d-block text-decoration-none">
											<div class="container-fluid">
												<div class="row">
													<div class="col-6 postInfo p-5">
														<div class="postInfoHeader d-flex justify-content-between align-items-center">
															<h5 class="m-0"><strong>
																	<%= author %>
																</strong></h5>
															<h5 class="m-0"><strong>
																	<% const createdAtDate=new Date(createdAt); %>
																		<%= createdAtDate.toLocaleDateString() %>
																</strong></h5>
														</div>
														<h2 class="mt-3"><b>
																<%= title %>
															</b></h2>
														<p class="postText mt-5 m-0">
															<%= text.slice(0, 400) %>...
														</p>
													</div>
													<div class="col-6 postImage" style="background-image: url(<%=image%>)">
													</div>
												</div>
											</div>
										</a>
									</div>
									<% }) %>
										<% } %>

						</div>
						<div class="col-1"></div>
					</div>
				</div>
				<div class="col-1"></div>
			</main>
			<%- include('./partial/footer.ejs')%>
	</body>

</html>